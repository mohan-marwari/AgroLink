<div class="filter-section border-bottom">
  <div class="container d-flex align-items-center">
    <div class="col col-10 col-md-10 col-lg-8 d-flex align-items-center position-relative">
      <button class="scroll-btn left-scroll d-none" id="scrollLeft">
        <i class="fa-solid fa-chevron-left"></i>
      </button>

      <div class="filters d-flex align-items-center overflow-hidden" id="filters">
        <div class="filter active">
          <div><i class="fa-solid fa-seedling"></i></div>
          <p>Trending</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-tractor"></i></div>
          <p>Tractors</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-seedling"></i></div>
          <p>Harvesters</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-hand-holding-water"></i></div>
          <p>Irrigation</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-fan"></i></div>
          <p>Dryers</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-house-chimney"></i></div>
          <p>Storage</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-leaf"></i></div>
          <p>Organic Farming</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-spray-can"></i></div>
          <p>Pesticides</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-sun"></i></div>
          <p>Solar Equipment</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-truck"></i></div>
          <p>Transport</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-user-group"></i></div>
          <p>Community</p>
        </div>
      </div>

      <button class="scroll-btn right-scroll" id="scrollRight">
        <i class="fa-solid fa-chevron-right"></i>
      </button>
    </div>

    <div class="col-2 col-md-2 col-lg-4 tax-toggle ms-auto border">
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="taxToggle"
        />
        <label class="form-check-label d-none d-md-inline" for="taxToggle">
          Display Total after Taxes
        </label>
        <label class="form-check-label d-md-none" for="taxToggle">
          <i class="bi bi-info-circle"></i>
        </label>
      </div>
    </div>
  </div>
</div>
