<% layout('/layouts/boilerplate') %> <%- include('./filter') %>

<div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing-image"
        style="height: 18rem"
      />
      <!-- Overlay for image -->
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <div>
          <p class="card-text fs-5 mb-0">
            <strong><%= listing.title %></strong>
          </p>
        </div>

        <div>
          <p class="card-text mb-3"><%= listing.location %></p>
        </div>

        <!-- <div class="fs-5 fw-bold mb-2"><%= listing.title %></div>
          <div class="mb-2"><%= listing.location %></div> -->
        <div class="card-text fw-bold fs-5">
          <%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %>
          <span class="unit-info"> / kg</span>
          <span class="tax-info text-muted"> &nbsp; + 18% GST </span>
        </div>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  // JavaScript for Toggle Functionality
  const taxSwitch = document.getElementById("taxToggle");
  const taxInfoElements = document.querySelectorAll(".tax-info");

  taxSwitch.addEventListener("change", () => {
    const showTax = taxSwitch.checked;
    taxInfoElements.forEach((element) => {
      element.style.display = showTax ? "inline" : "none";
    });
  });
</script>
