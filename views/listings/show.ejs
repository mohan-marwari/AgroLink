<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
  const price = <%- JSON.stringify(listing.price) %>;
</script>
<div class="row">
  <div class="col-8 offset-2 my-2">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-2 listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body mt-0">
      <p class="card-text">
        <!-- Owner information -->
        <% if (listing.owner) { %>
        <i>Owner: <strong>@<%= listing.owner.username %></strong></i> <br />
        <% } else { %>
        <strong>Owner: </strong> Unknown <% } %>
      </p>
      <p class="card-text mb-0">
        <strong><%= listing.title %></strong>
      </p>

      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        <strong>Price: </strong>&#8377; <%= listing.price ?
        listing.price.toLocaleString("en-IN") : 'N/A' %> <br />
        <strong>Location: </strong><%= listing.location %> <br />
        <strong>Country: </strong><%= listing.country %> <br />
      </p>
    </div>
  </div>
  <br />
  <% if (currUser && listing.owner._id.equals(currUser._id)) {%>

  <!-- button Edit & Delete-->
  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn edit-btn col-1 offset-2 mb-3 px-4 text-center text-white"
    >
      Edit
    </a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
  <%} %>
  <!-- Review -->
  <% if (currUser) { %>
  <div class="col-8 offset-2 mb-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating </label>
        <fieldset id="rating" class="starability-coinFlip">
          <!-- <legend>Rating:</legend> -->
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment">Comments</label><br />
        <textarea
          name="review[comment]"
          id="comment"
          cols="25"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide some feedback.</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>
    <hr />

    <p><b>All Reviews</b></p>
    <div class="row">
      <% for (let review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="container card-body pb-3">
          <div class="row">
            <div class="col">
              <h4 class="card-title m-0">
                <% if (review.author) { %>
                <i>@<%= review.author.username %></i> <% } else { %>
                <i>@anonymous</i>
                <% } %>
              </h4>
            </div>
            <div class="col text-end">
              <p
                class="starability-result card-text"
                data-rating="<%= review.rating %>"
              ></p>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col">
              <p class="card-text"><%= review.comment %></p>
              <form
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                method="POST"
              >
                <button type="submit" class="btn btn-outline-danger btn-sm">
                  <i class="fas fa-trash-alt me-1"></i> Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <hr />
  <div class="col-8 offset-2 mb-4">
    <h3 class="mt-4">The location here</h3>
    <div id="map" class="mt-4"></div>
    
