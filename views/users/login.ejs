<% layout("/layouts/boilerplate") %>
<div class="container d-flex justify-content-center align-items-center">
    <form action="/login" method="POST" class="p-4 border rounded bg-light needs-validation" novalidate style="width: 100%; max-width: 400px;">
        <h4 class="mb-3 text-center">Log In</h4>
        <input type="text" class="form-control mb-2" name="username" placeholder="Username" required>
        <input type="password" class="form-control mb-3" name="password" placeholder="Password" required>
        <button type="submit" class="btn btn-primary w-100">Login</button>
        <p class="text-center mt-2">
            <small>Don't have an account? <a href="/signup">Sign up</a></small>
        </p>
    </form>
</div>      